<% if flash.any? %>
  <div class="fixed inset-0 flex flex-col items-end px-4 py-6 pointer-events-none sm:p-6 sm:items-end sm:justify-start z-50" data-flash-notifications='true'>

    <% flash.each do |msg_type, msg| %>
      <div class="<%= flash_class(msg_type) %> max-w-sm w-full mt-2 bg-white shadow-lg rounded-lg pointer-events-auto transition-transform transform ease-in-out duration-300">
        <div class="rounded-lg shadow-xs overflow-hidden">
          <div class="p-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400"
                     viewBox="0 0 24 24" stroke="currentColor"
                     <% if msg_type == 'notice' %>
                     style="color: #4299E1;"
                     <% elsif msg_type == 'success' %>
                     style="color: #68D391;"
                     <% elsif msg_type == 'error' %>
                     style="color: #FC8181;"
                     <% elsif msg_type == 'alert' %>
                     style="color: #F6E05E;"
                     <% end %>>
                  <path <% if msg_type == 'notice' %> class="text-blue-400" <% end %>
                        <% if msg_type == 'success' %> class="text-green-400" <% end %>
                        <% if msg_type == 'alert' %> class="text-yellow-300" <% end %>
                        <% if msg_type == 'error' %> class="text-red-500" <% end %>
                        stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="<% if msg == 'notice' %>M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z
                          <% elsif msg_type == 'success' %>M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z
                          <% elsif msg_type == 'alert' %>M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z
                          <% elsif msg_type == 'error' %>M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z
                          <% end %>" />
                </svg>
              </div>
              <div class="ml-3 w-0 flex-1 pt-0.5">
                <p class="text-sm leading-5 font-medium text-gray-900">
                  <%= msg %>
                </p>
              </div>
              <div class="ml-4 flex-shrink-0 flex">
                <button onclick="this.closest('.transition-transform').classList.add('scale-0'); setTimeout(() => { this.closest('.transition-transform').classList.add('hidden'); }, 300);"
                        class="inline-flex text-gray-400 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150">
                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                          clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
