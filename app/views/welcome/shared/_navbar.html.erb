      <a class="mr-4 text-md text-blue-900 rounded py-1 px-2 hover:underline" href="/#pricing">Pricing</a>

      <% if current_user %>
        <%= link_to current_user.email, dashboard_path, class: "mr-4 text-md text-blue-900 rounded py-1 px-2 hover:underline" %>

        <%= link_to "Sign out", sign_out_path, method: :delete, class: "mr-4 text-md text-blue-900 rounded py-1 px-2 hover:underline" %>
      <% else %>
        <%= link_to "Sign Up", sign_up_path, class: "mr-4 text-md text-blue-900 rounded py-1 px-2 hover:underline" %>

        <%= link_to "Login", sign_in_path, class: "text-lg text-blue-500 border border-2 border-blue rounded py-1 px-2 border-blue-500 hover:bg-blue-500 hover:text-white hover:shadow bg-white" %>
